<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/userFragment">

    <fragment
        android:id="@+id/userFragment"
        android:name="fi.metropolia.lab1_sqlite.view.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_userFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
    </fragment>

    <fragment
        android:id="@+id/addressFragment"
        android:name="fi.metropolia.lab1_sqlite.view.AddressFragment"
        android:label="fragment_address"
        tools:layout="@layout/fragment_address" >
        <action
            android:id="@+id/action_addressFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
        <argument
            android:name="userName"
            app:argType="string"
            android:defaultValue="Default name" />
    </fragment>

    <fragment
        android:id="@+id/displayFragment"
        android:name="fi.metropolia.lab1_sqlite.view.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display" >
        <action
            android:id="@+id/action_displayFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
</navigation>